{
  "name": "rs-stock",
  "displayName": "RS Stock Management",
  "private": true,
  "version": "0.1.0",
  "description": "Professional stock management application for RS enterprises",
  "type": "module",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "test": "vitest --environment jsdom",
    "test:ui": "vitest --ui --environment jsdom"
  },
  "build": {
    "appId": "com.rsstockmanagement.app",
    "productName": "RS Stock Management",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RS Stock"
    },
    "portable": {
      "artifactName": "RS-Stock-${version}.exe"
    }
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^7.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "jsdom": "^22.0.0",
    "vite": "^4.0.0",
    "vitest": "^1.0.0"
  }
}
